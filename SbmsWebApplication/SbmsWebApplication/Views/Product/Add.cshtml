@model List<SbmsWebApplication.Models.Product>
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h1>Add Products</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-success">
            <div class="panel-body">
                <div class="form-group row">
                    @Html.Label("Name", "Product Name", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBox("Name", null, new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group row">
                    @Html.Label("Code", "Product Code", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBox("Code", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.Label("Category", "Product Category", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBox("Category", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.Label("ReorderLevel", "ReorderLevel", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBox("ReorderLevel", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.Label("Description", "Product Description", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBox("Description", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4 pull-right col-md-offset-4">
                    <input type="submit" class="btn btn-success" value="Save" />
                </div>
            </div>
        </div>


    </div>
}
@if (ViewBag.SMsg != null)
{
    <p style="color: green; font-weight: bolder">@(ViewBag.SMsg)</p>
}

else if (ViewBag.FMsg != null)
{
    <p style="color: red; font-weight: bolder">@(ViewBag.FMsg)</p>
}
else if (ViewBag.DMsg != null)
{
    <p style="color: red; font-weight: bolder">@(ViewBag.DMsg)</p>
}

<div class="row">
    <div class="col-md-8 offset-2">

        <h2>Product List</h2>
        <table class="table table-bordered ">

            <tr>
                <th>Sl</th>
                <th>Name</th>
                <th>Code</th>
                <th>Category</th>
                <th>ReorderLevel</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
            @{ int i = 1; }

            @foreach (var data in Model)
            {
                <tr>
                    <td>
                        <label>@i</label>
                        @{ i++; }
                    </td>
                    <td>@data.Name</td>
                    <td>@data.Code</td>
                    <td>@data.Category</td>
                    <td>@data.ReorderLevel</td>
                    <td>@data.Description</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Product", new { id = data.Id }, new { @target = "_blank", @class = "btn btn-default btn-sm" })
                        @Html.ActionLink("Delete", "Delete", "Product", new { id = data.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </table>

    </div>
</div>

