@model SbmsWebApplication.Models.Customer
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
@if (ViewBag.SMsg != null)
{
    <p style="color: green; font-weight: bolder">@(ViewBag.SMsg)</p>
}

else if (ViewBag.FMsg != null)
{
    <p style="color: red; font-weight: bolder">@(ViewBag.FMsg)</p>
}
else if (ViewBag.DMsg != null)
{
    <p style="color: red; font-weight: bolder">@(ViewBag.DMsg)</p>
}
<h1>Add Customer</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-success">
            <div class="panel-body">
                <div class="form-group row">
                    @Html.Label("Name", "Customer Name", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBox("Name", null, new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group row">
                    @Html.Label("Code", "Customer Code", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBox("Code", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.Label("Address", "Customer Address", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBox("Address", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.Label("Email", "Email", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBox("Email", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.Label("ContactNo", "Customer ContactNo", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBox("ContactNo", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.Label("LoyalityPoint", " LoyalityPoint", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBox("LoyalityPoint", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4 pull-right col-md-offset-4">
                    <input type="submit" class="btn btn-success" value="Save" />  
                    <input type="submit" class="btn btn-danger" value="Edit"/>                  
                </div>

            </div>
        </div>
    </div>
}

